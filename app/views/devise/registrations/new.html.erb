<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='contents'>
  <h1 class='title'>会員情報入力</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :human_last_name, class:"input-name", id:"human-last-name", placeholder:"山田（飼い主様）" %>
      <%= f.text_area :human_first_name, class:"input-name", id:"human-first-name", placeholder:"陸太（飼い主様）" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :human_last_name_rubi, class:"input-name", id:"human-last-name-kana", placeholder:"ヤマダ（飼い主様）" %>
    <%= f.text_area :human_first_name_rubi, class:"input-name", id:"human-first-name-kana", placeholder:"リクタ（飼い主様）" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p>※パスワードは英字•数字を両方含む</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
  </div>
    <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :pets_name, class:"input-name", id:"pets-name", placeholder:"ぽち（愛ペット様）" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :pets_name_rubi, class:"input-name", id:"pets-name-kana", placeholder:"ポチ（愛ペット様）" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">種類</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :pets_type, class:"input-name", id:"pets-type", placeholder:"柴犬（犬種）" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お誕生日（半角）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :pets_birthday, class:"input-name", id:"pets-birthday", placeholder:"20210101 (愛ペット様)" %>
  </div>
  <div>
    <p class='info-text'>※お誕生日がご不明の方は空欄のままお進みください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ご年齢（半角）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :pets_age, class:"input-name", id:"pets-age", placeholder:"5（愛ペット様）" %>
  </div>
    <p class='info-text'>※ご年齢がご不明の方はおおよその数値を入力してください</p>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
