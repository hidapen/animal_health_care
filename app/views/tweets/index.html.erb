<%= render "shared/header" %>

<div class="body">
  <h1 class="title">RECORD</h1>
  <li class="new"><%= link_to '記録する', new_tweet_path, class: "tweet" %></li>
  <%= month_calendar events: @tweets do |date, tweets| %>
    <%= date.day %>
    <% tweets.each do |tweet| %>
      <div>
        <p>元気度：<%= tweet.energy.name %></p>
        <p>食欲度：<%= tweet.food.name %></p>
        <p>トイレ回数：<%= tweet.toilet.name %></p>
        <p>便の状態：<%= tweet.poop_status.name %></p>
        <p>運動量：<%= tweet.exercise.name %></p>
        <p>睡眠量：<%= tweet.sleep.name %></p>
        <%= link_to '詳細', tweet_path(tweet.id), class: "bold" %>
      </div>
      <% if tweet.different_id == 3 %>
        <p class="different_day">＊＊＊</p>
      <% end %>
    <% end %>
  <% end %>
</div>
